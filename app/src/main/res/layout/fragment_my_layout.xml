<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c4c4c4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/myback">

        <ImageView
            android:id="@+id/img_fragment_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/yuan" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/fragment_wodedingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的订单"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_chakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="查看所有订单>" />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#fff"
       android:layout_marginTop="3dp"
       android:padding="10dp"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/daifukuan"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="待付款"
           android:drawablePadding="15dp"
           android:gravity="center"
           android:textSize="16sp"
           android:drawableTop="@mipmap/daifukuan"/>
       <TextView
           android:id="@+id/daifahuo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawablePadding="15dp"
           android:text="待发货"
           android:gravity="center"
           android:textSize="16sp"
           android:drawableTop="@mipmap/daifahuo"/>
       <TextView
           android:id="@+id/daishouhuo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawablePadding="15dp"
           android:text="待收货"
           android:gravity="center"
           android:textSize="16sp"
           android:drawableTop="@mipmap/daishouhuo"/>
       <TextView
           android:id="@+id/tuikuan"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawablePadding="15dp"
           android:text="退款"
           android:gravity="center"
           android:textSize="16sp"
           android:drawableTop="@mipmap/tuikuan"/>

   </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wodeguanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="我的关注"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/wodeguanzhu"/>
        <TextView
            android:id="@+id/xiugaimima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="修改密码"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/xiugaimima"/>
        <TextView
            android:id="@+id/shouhuoxinxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="收货信息"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/shouhuoxinxi"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/guanyuwomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="关于我们"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/yuan"/>
        <TextView
            android:id="@+id/lianxiwomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="联系我们"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/lianxiwomen"/>
        <TextView
            android:id="@+id/yonghushezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:text="用户设置"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@mipmap/yonghushezhi"/>
    </LinearLayout>

</LinearLayout>
